<% layout('layout/boilerplate') -%>

<div class="row">
    <div class="col-lg-6">
        <div class="card mx-auto mb-3" style="width: 23rem;">
            <img src="<%=product.imageUrl%>" class="card-img-top" alt="<%=product.name%>">
            <div class="card-body">
                <h5 class="card-title"><%=product.name%> </h5>
                <p class="card-text"><%=product.desc%></p>
                <h5 class="card-title">$<%=product.price%> </h5>
                <a href="#" class="btn btn-sm btn-primary">Buy Now</a>
                <a href="#" class="btn btn-sm btn-warning">Edit</a>
                <a href="#" class="btn btn-sm btn-success">Add To Cart</a>
                <form class="d-inline-block" action="/products/<%=product._id%>?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>

            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <h1 class="display-6">Leave a Review</h1>
        <form action="/products/<%=product._id%>/reviews" method="post">
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-control" type="range" name="rating" id="rating" min="0" max="5" step="1">
            </div>
            <div class="mb-3">
                <label class="form-label" for="comment">Comment</label>
                <textarea class="form-control" name="comment" id="comment" cols="30" rows="3"></textarea>
            </div>
            <button class="btn btn-sm btn-success">Submit</button>
        </form>
        <div class="my-3">
            <% for(let review of product.reviews){ %>
                <div class="card mb-2">
                    <div class="card-body">
                        <p>
                            Rated: <%=review.rating%> stars
                        </p>
                        <p><%=review.comment%></p>
                        <p><%=review.createdAt && review.createdAt.toLocaleDateString()%></p>
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </div>
                  </div>
            <% } %>
        </div>
    </div>
</div>